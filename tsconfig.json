{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "vitest",
      "@types/node",
      "@types/marked",
      "@types/web-bluetooth"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "tests"
  ],
  "files": ["auto-imports.d.ts", "components.d.ts"]
}
